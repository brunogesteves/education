{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs", 
    "lib": ["es2018","dom"],
    "outDir": "./dist",
    "allowJs": true,          
    "removeComments": true,       
    "resolveJsonModule": true,      
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "pretty": true,
    "baseUrl": "./src",
    "rootDirs": ["./src", "./test"],
    "paths":{
      "@/*": ["./*"]
    },
    "declaration": true,
    "isolatedModules": true,
    "types": ["jest"],
  },
  "include": [ 
    "./src/**/*.ts",
    "./test/**/*.ts",
  ]
}
